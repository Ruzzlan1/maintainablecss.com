{% extends "layouts/default.njk" %}

{% block header %}
  <header class="header">
    <a class="logo" href="/">MaintainableCSS</a>
  </header>
{% endblock %}

{% block main %}
  <div class="basicPage">
    <span class="chapterNumber">Chapter {{number}}</span>
    <h1>{{ title }}</h1>
    {{ content | safe }}
  </div>
  {% if next %}
    <div class="chapterNavigation">
      <a rel="next" class="primaryLinkButton" href="{{next.href}}" >Next: {{next.text}}</a>
    </div>
  {% endif %}
{% endblock %}

{% block afterMain %}

  <div class="chapters">
    <div class="chapters-inner">
      <h2>Chapters</h2>
      <ol>
        {% for chapter in collections.chapter %}
          <li>
            <a {% if chapter.data.id == id %} aria-current="true"{% endif %}
              href="{{ chapter.data.permalink }}">
                {{ chapter.data.title }}
            </a>
          </li>
        {% endfor %}
      </ol>
    </div>
  </div>
  {% include 'partials/subscribeForm.njk' %}
  {% include 'partials/footer.njk' %}
{% endblock %}